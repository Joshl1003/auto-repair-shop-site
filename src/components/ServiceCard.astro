---
type Props = {
  name: string;
  description: string;
  startingAt?: string;   // "$79" or "$79+"
};

const { name, description, startingAt} = Astro.props as Props;
---

<div class="rounded-xl border bg-white p-5 shadow-sm">
  <div class="flex items-start justify-between gap-3">
    <h3 class="text-lg font-semibold leading-snug">{name}</h3>
  </div>

  <p class="mt-2 text-sm leading-relaxed text-gray-700">
    {description}
  </p>

  {startingAt && (
    <p class="mt-4 text-sm font-medium text-gray-900">
      Starting at <span class="font-semibold">{startingAt}</span>
      <span class="ml-2 text-xs text-gray-500">(varies by vehicle)</span>
    </p>
  )}
</div>
